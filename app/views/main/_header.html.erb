<header>
  <div class="title">
    <%= link_to 'Meal manager', root_path %>
  </div>
    <% if user_signed_in? %>
      <div class="head-contents">
        <span class="post">
          <font>記録する</font>
          <i class="fas fa-angle-down"></i>
            <%# <ul class="dropdwn">
              <li><%= link_to "食べ物", new_food_path %></li>
            <%# </ul> %>
        </span>
        <span class="user-show">
          <%= link_to "マイページ", user_path(current_user.id), class: 'user-show-link'%>
        </span>
      </div>
    <% end %>
  <div class="header-right">
    <% if user_signed_in? %>
      <span>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </span>
    <% else %>
      <%= link_to "ログイン", new_user_session_path %>
      <%= link_to "新規登録", new_user_registration_path %>
    <% end %>
  </div>
</header>